generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserTier {
  SENTINEL
  VANGUARD
  LEGACY
}

model User {
  id                String            @id @default(uuid())
  email             String            @unique
  password          String?           // hash (pbkdf2); null = usuário legado
  name              String?
  emailVerified     Boolean           @default(false)
  emailVerificationToken String?      @unique
  emailVerificationExpires DateTime?  // expiração do token
  tier              UserTier          @default(SENTINEL)

  // Cognitive Tracking (Upgrade Level 3)
  lastDashboardVisit DateTime?
  totalInsightsViewed Int             @default(0)
  impulseCount        Int             @default(0) // Persona C detection

  createdAt         DateTime          @default(now())
  updatedAt         DateTime         @updatedAt
  supermarketLists  SupermarketList[]
  goals             Goal[]
  kernelProfile     KernelProfile?
}

enum SupermarketCategory {
  PRODUCE
  DAIRY
  MEAT
  BAKERY
  FROZEN
  BEVERAGES
  PANTRY
  CLEANING
  HYGIENE
  HOME
  PETS
  PHARMACY
  FITNESS
  OTHER
}

model SupermarketList {
  id        String            @id @default(uuid())
  userId    String
  name      String
  budget    Float?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     SupermarketItem[]
}

model SupermarketItem {
  id             String             @id @default(uuid())
  listId         String
  name           String
  category       SupermarketCategory
  estimatedPrice Float
  actualPrice    Float?
  quantity       Int?               @default(1)
  purchased      Boolean           @default(false)
  createdAt      DateTime          @default(now())
  updatedAt      DateTime          @updatedAt
  list           SupermarketList    @relation(fields: [listId], references: [id], onDelete: Cascade)
}

enum GoalPeriodicity {
  MONTHLY
  WEEKLY
}

model Goal {
  id            String          @id @default(uuid())
  userId        String
  name          String
  value         Float
  periodicity   GoalPeriodicity
  progress      Float           @default(0)
  impactCurrent Float           @default(0)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
  user          User            @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model KernelProfile {
  id        String   @id @default(uuid())
  userId    String   @unique
  w1        Float    @default(0.5)
  w2        Float    @default(0.2)
  w3        Float    @default(0.1)
  w4        Float    @default(0.15)
  w5        Float    @default(0.05)
  w6        Float    @default(0.1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
