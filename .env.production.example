# Fortress v7.24 - Production Environment Template
# Copy to .env.production and fill with actual values

# Database
DATABASE_URL=postgresql://fortress_app:STRONG_PASSWORD_HERE@your-db-host:5432/fortress?schema=public
DB_PASSWORD=STRONG_PASSWORD_HERE

# Redis
REDIS_URL=redis://:STRONG_PASSWORD_HERE@your-redis-host:6379
REDIS_PASSWORD=STRONG_PASSWORD_HERE

# JWT & Sessions (Generate with: openssl rand -base64 32)
JWT_SECRET=GENERATE_RANDOM_SECRET_HERE
REFRESH_TOKEN_SECRET=GENERATE_RANDOM_SECRET_HERE
SESSION_SECRET=GENERATE_RANDOM_SECRET_HERE

# Application
APP_ENV=production
PORT=3001
NODE_ENV=production

# Frontend (if separate deployment)
VITE_API_URL=https://api.your-domain.com

# Monitoring (Optional)
SENTRY_DSN=
LOG_LEVEL=info
